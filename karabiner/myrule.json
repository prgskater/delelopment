{
  "title": "myrules",
  "rules": [
    {
      "description": "Change fn+hjkl to arrow keys",
      "manipulators": [
          {
              "from": {
                  "key_code": "h",
                  "modifiers": {
                      "mandatory": [
                          "fn"
                      ],
                      "optional": [
                          "any"
                      ]
                  }
              },
              "to": [
                  {
                      "key_code": "left_arrow"
                  }
              ],
              "type": "basic"
          },
          {
              "from": {
                  "key_code": "j",
                  "modifiers": {
                      "mandatory": [
                          "fn"
                      ],
                      "optional": [
                          "any"
                      ]
                  }
              },
              "to": [
                  {
                      "key_code": "down_arrow"
                  }
              ],
              "type": "basic"
          },
          {
              "from": {
                  "key_code": "k",
                  "modifiers": {
                      "mandatory": [
                          "fn"
                      ],
                      "optional": [
                          "any"
                      ]
                  }
              },
              "to": [
                  {
                      "key_code": "up_arrow"
                  }
              ],
              "type": "basic"
          },
          {
              "from": {
                  "key_code": "l",
                  "modifiers": {
                      "mandatory": [
                          "fn"
                      ],
                      "optional": [
                          "any"
                      ]
                  }
              },
              "to": [
                  {
                      "key_code": "right_arrow"
                  }
              ],
              "type": "basic"
          }
      ]
    },
    {
        "description": "fn + ;（return）/e（esc）/d（delete）",
        "manipulators": [
            {
                "from": {
                    "key_code": "semicolon",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "return_or_enter"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "e",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "escape"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "d",
                    "modifiers": {
                        "mandatory": [
                            "fn"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "delete_or_backspace"
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "japanese_eisuu double to japanese_kana",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "japanese_eisuu"
                },
                "to": [
                    {
                        "key_code": "japanese_kana"
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_if",
                        "name": "japanese_eisuu",
                        "value": 1
                    }
                ]
            },
            {
                "type": "basic",
                "from": {
                    "key_code": "japanese_eisuu",
                    "modifiers": {
                        "optional": [ "any" ]
                    }
                },
                "to": [
                    { "set_variable": { "name": "japanese_eisuu", "value": 1 } },
                    { "key_code": "japanese_eisuu" }
                ],
                "to_delayed_action": {
                    "to_if_invoked": [
                        { "set_variable": { "name": "japanese_eisuu", "value": 0 } }
                    ],
                    "to_if_canceled": [
                        { "set_variable": { "name": "japanese_eisuu", "value": 0 } }
                    ]
                },
                "conditions": [
                    { "type": "variable_if", "name": "japanese_eisuu", "value": 0 }
                ]
            }
        ]
    }
  ]
}
